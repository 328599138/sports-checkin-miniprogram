/* history.wxss */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.scrollarea {
  height: 100vh;
  background: transparent;
}

.container {
  padding: 20rpx;
  padding-top: 60rpx;
}

/* 统计概览 */
.stats-overview {
  display: flex;
  gap: 15rpx;
  margin-bottom: 40rpx;
}

.overview-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: 25rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.overview-number {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 8rpx;
}

.overview-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
}

/* 月份选择器 */
.month-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(20rpx);
  border-radius: 30rpx;
  padding: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.15);
}

.month-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

.month-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.month-text {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: white;
  font-weight: 600;
  margin: 0 20rpx;
}

/* 日历容器 */
.calendar-container {
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(20rpx);
  border-radius: 30rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.15);
}

.calendar-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.day-header {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 500;
  padding: 10rpx 0;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 15rpx;
  position: relative;
  background: rgba(255, 255, 255, 0.05);
  transition: all 0.3s ease;
}

.calendar-day.other-month {
  opacity: 0.3;
}

.calendar-day.today {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
}

.calendar-day.checked {
  background: linear-gradient(135deg, rgba(78, 205, 196, 0.3), rgba(68, 160, 141, 0.3));
  border: 2rpx solid rgba(78, 205, 196, 0.5);
}

.day-number {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.day-indicator {
  position: absolute;
  bottom: 6rpx;
  right: 6rpx;
}

.sport-emoji {
  font-size: 20rpx;
}

/* 记录列表 */
.records-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  color: white;
  font-weight: 600;
  margin-bottom: 30rpx;
  text-align: center;
}

.records-list {
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(20rpx);
  border-radius: 30rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.15);
  overflow: hidden;
}

.record-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.record-item:last-child {
  border-bottom: none;
}

.record-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.record-emoji {
  font-size: 40rpx;
  width: 60rpx;
  text-align: center;
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.record-sport {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

.record-date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.record-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(20rpx);
  border-radius: 30rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.empty-emoji {
  display: block;
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: white;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
} 